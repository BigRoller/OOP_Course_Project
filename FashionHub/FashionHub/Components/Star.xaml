<UserControl x:Class="FashionHub.Components.Star"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FashionHub.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
    <Path x:Name="StarPath" Margin="0 0 15 0" Fill="#633788" Stroke="#83AFFF" StrokeThickness="1"  Cursor="Hand"
      Data="M 10,1 L 12,7 L 18,7 L 13,11 L 15,17 L 10,13 L 5,17 L 7,11 L 2,7 L 8,7 Z">
      <Path.RenderTransform>
        <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
      </Path.RenderTransform>
      <Path.Effect>
        <DropShadowEffect 
            Color="Black"
            Direction="320"
            ShadowDepth="5"
            Opacity="0.8"
            BlurRadius="20"/>
      </Path.Effect>
    </Path>
  </Grid>
</UserControl>
